{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Modules
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    // Emit
    "noEmit": true,

    // Interop Constraints
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Language and Environment
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],

    // Paths
    "rootDir": "src/",
    "baseUrl": "src/",
    "paths": {
      "app/*": ["app/*"],
      "components/*": ["components/*"],
      "sections/*": ["sections/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"]
    },

    // Misc
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
